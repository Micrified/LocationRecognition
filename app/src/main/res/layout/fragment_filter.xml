<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
    <TextView
        android:id="@+id/particle_textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="0dp"
        android:text="Filtered Access Point Set"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="18sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/wifi_filtered_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="4dp"
        android:scrollbars="vertical"
        android:background="@android:color/darker_gray"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="0dp"
            android:text="Access Points"
            android:layout_marginVertical="5dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_scan_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/wifi_nonfiltered_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="4dp"
            android:layout_marginBottom="16dp"
            android:scrollbars="vertical"
            android:background="@android:color/darker_gray"/>

    </LinearLayout>
</LinearLayout>