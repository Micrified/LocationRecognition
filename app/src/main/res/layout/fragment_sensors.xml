<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ambient Light Zone Testing"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/textview_light_test_result"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Unknown"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/colorYellow"/>

        <Button
            android:id="@+id/button_test_light_environment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Test location"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ambient Light Zone Training"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Environment"
            android:textAlignment="center"
            android:textStyle="normal"
            android:textSize="14dp"/>

        <Spinner
            android:id="@+id/spinner_light_environment"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textview_light_sample_counter"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/10 samples"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorLimeGreen"
            android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:src="@drawable/ic_sensors"/>

        <TextView
            android:id="@+id/textview_light_live_samples"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="45.5 lux"
            android:textColor="@color/colorRedOrange"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"/>


    </LinearLayout>

    <Button
        android:id="@+id/button_sample_light_sensor"
        android:text="Sample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"/>
    <Button
        android:id="@+id/button_clear"
        android:text="Clear samples for selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ambient Light Zone Data"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_average_inside"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="55"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/colorLimeGreen"/>

            <TextView
                android:text="Avg. Inside"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="14dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_average_stairs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="55"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/colorLimeGreen"/>

            <TextView
                android:text="Avg. Stairs"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="14dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_average_outside"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="55"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/colorLimeGreen"/>

            <TextView
                android:text="Avg. Outside"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="14dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Barometer Training"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_average_upstairs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="55"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/colorLimeGreen"/>

            <Button
                android:id="@+id/button_train_upstairs"
                android:text="Train Upstairs"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="14dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_current_barometer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="55"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/colorLimeGreen"/>

            <TextView
                android:text="Current Pressure"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="14dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_average_downstairs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="55"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/colorLimeGreen"/>

            <Button
                android:id="@+id/button_train_downstairs"
                android:text="Train Downstairs"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="14dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>
</ScrollView>